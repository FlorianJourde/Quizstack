{% block body %}

    <form action="{{ path('quiz') }}" method="GET" id="questionForm">

        <h2 class="text-3xl">Levels</h2>
        <ul>
            <li>
                <input type="radio" value="1" name="difficulty">Easy</button>
                <input type="radio" value="2" name="difficulty">Medium</button>
                <input type="radio" value="3" name="difficulty">Hard</button>
            </li>
        </ul>

        <h2 class="text-3xl">Categories</h2>
        <ul>
            {% for category in categories %}
                <li>
                    <input type="checkbox" id="category-{{ category.name }}" value="{{ category.name }}"
                           name="category[]">
                    <label for="category-{{ category.name }}">{{ category.name }}</label>
                </li>
            {% else %}
                <li>No categories.</li>
            {% endfor %}
        </ul>

        <button type="submit">
            Play
        </button>

        <a href="{{ path('quiz') }}">Play without filters</a>
    </form>

{% endblock %}

{% block javascripts %}{% endblock %}