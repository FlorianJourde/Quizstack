{% if score.user.image is not null %}
    {% set avatar = asset('/uploads/images/users/' ~ score.user.image) %}
{% else %}
    {% set avatar = asset('/images/logos/profile-picture.png') %}
{% endif %}

 {% if period == 'all-time' %}
     {% set points = score.allTime %}
 {% elseif period == 'month' %}
     {% set points = score.month %}
 {% else %}
     {% set points = score.week %}
 {% endif %}

<li class="score-item glass box flex flex-wrap gap-spacing-secondary items-center grow">
    <img class="aspect-square rounded-full w-16 xl:w-20 object-cover border-light-grey-secondary border-2"
         alt="Profile picture" src="{{ avatar }}">
    <div class="flex flex-col">
        <h3 class="small-title">{{ score.user.username }}</h3>
        <div class="date-container flex gap-4  items-center">
            <p>{{ points }}</p>
        </div>
    </div>
</li>