 {% if form is defined and not form.vars.valid %}
    <ul class="mt-2">
        {% for error in form.vars.errors %}
            <li>{{ error.message }}</li>
        {% endfor %}

        {% for child in form.children %}
            {% if not child.vars.valid %}
                {% for error in child.vars.errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            {% endif %}
        {% endfor %}
    </ul>
 {% endif %}

