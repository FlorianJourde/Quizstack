<div class="flex flex-col">
    <div class="w-full flex flex-col">
        {#        <h2 class="small-title">Choices</h2> #}
        {#        <h2 class="small-title">{{ form.choices.vars.label }}</h2> #}
        <h2 class="small-title">{{ form.choices.vars.label }}</h2>
        {#        <h2 class="small-title">{{ form_label(form.choices) }}</h2> #}

        {#        <h3>Choices</h3> #}
        <ul class="choices-list" data-max-choices="{{ form.choices.vars.attr['data-max-choices'] }}">
            {% for choice in form.choices %}
                <li class="choice-item flex flex-col mb-8 relative">
                    {{ form_row(choice) }}
                    <button type="button"
                            class="button button-action absolute bottom-[16px] right-[16px] delete-choice">
                        <span class="material-icons">delete</span>
                    </button>
                </li>
            {% endfor %}
        </ul>

        <ul class="choices-collection flex flex-col w-full"
            data-index="{{ form.choices|length > 0 ? form.choices|last.vars.name + 1 : 0 }}"
            data-prototype="{{ form_widget(form.choices.vars.prototype)|e('html_attr') }}"
        ></ul>

        <button type="button" class="add_item_link button button-primary self-start"
                data-collection-holder-class="choices-collection">
            Add a choice
        </button>
    </div>
</div>