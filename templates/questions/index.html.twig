{% extends 'base.html.twig' %}

{% block title %}Questions{% endblock %}

{% block body %}
    <div class="container">
        <h1>Questions listes</h1>
        <br>
        <a href="{{ path('question_new') }}">New</a>

        <br>

        <div class="questions-list">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Content</th>
                    <th>Image</th>
                    <th>Creation date</th>
                    <th>Update date</th>
                    <th>Status</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for question in questions %}
                    <tr>
                        <td>{{ question.id }}</td>
                        <td>{{ question.content }}</td>
                        <td>{{ question.image }}</td>
                        <td>{{ question.creationDate|date('d/m/Y') }}</td>
                        <td>{{ question.updateDate|date('d/m/Y') }}</td>
                        <td>{{ question.status }}</td>
                        <td>
                            <a href="{{ path('question', {'id': question.id}) }}">
                            See
                            </a>
                            <a href="{{ path('question_edit', {'id': question.id}) }}">
                                Edit
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun utilisateur trouv√©</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}