{% extends 'layout.html.twig' %}

{% set title = 'Question' %}

{% block body %}

    <div class="wrapper">
        <div class="page-header-container">
            <h1 class="big-title grow">Share question {{ question.id }}</h1>
            <div class="buttons-container">
                <a class="button button-action" href="javascript:history.back()">
                    <span class="material-icons">arrow_back</span>
                </a>
            </div>
        </div>
    </div>

    <div class="wrapper wrapper-small">
        <div id="share-container" data-question-id="{{ questionId }}" data-mode="{{ mode }}"></div>
    </div>

    <div class="wrapper">
        <div class="page-separator-container">
            <h2 class="title">Informations</h2>
        </div>
    </div>

    <div class="wrapper">
        <div class="form-container glass box bg-dark-grey-secondary">
            <div>
                <h2 class="small-title">
                    <span class="material-icons">person</span>
                    Author
                </h2>
                <p>{{ question.user.username }}</p>
            </div>
            <div>
                <h2 class="small-title">
                    <span class="material-icons">image</span>
                    Image
                </h2>
                {% if question.image %}
                    <p>{{ question.image }}</p>
                {% else %}
                    <p>No image</p>
                {% endif %}
            </div>
            <div>
                <h2 class="small-title">
                    <span class="material-icons">today</span>
                    Creation date
                </h2>
                <p>{{ question.creationDate|date('d/m/y') }}</p>
            </div>
            <div>
                <h2 class="small-title">
                    <span class="material-icons">event_repeat</span>
                    Update date
                </h2>
                <p>{{ question.updateDate|date('d/m/y') }}</p>
            </div>
            <div>
                <h2 class="small-title">
                    <span class="material-icons">toggle_on</span>
                    Status
                </h2>
                <span class="text-xs rounded-sm px-2 py-1 {{ question.status ? 'bg-green-secondary/50' : 'bg-red-secondary/50' }}">
                    {{ question.status ? 'online' : 'offline' }}
                </span>
            </div>
        </div>
    </div>

{% endblock %}