{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}

    {{ include('partials/banner.html.twig') }}

    <div class="wrapper">
        <div class="page-header-container">
            <h1 class="big-title grow">Questions {{ question.id }}</h1>
            <div class="buttons-container">
                <a class="button button-action" href="{{ path('question_edit', {'id': question.id}) }}">
                    <span class="material-icons">edit</span>
                </a>
            </div>
        </div>
    </div>

    <div id="quiz-container" class="mb-4" data-mode="{{ mode }}" data-question-id="{{ questionId }}"></div>

    <div class="wrapper">
        <div class="question-info">
            <p>Image : {{ question.image }}</p>
            <p>Creation date : {{ question.creationDate|date('d/m/y') }}</p>
            <p>Update date : {{ question.updateDate|date('d/m/y') }}</p>
            <p>Status :
                <span class="text-xs rounded-sm px-2 py-1 {{ question.status ? 'bg-green-secondary/50' : 'bg-red-secondary/50' }}">
                    {{ question.status ? 'online' : 'offline' }}
                </span>
            </p>
        </div>
    </div>

{% endblock %}