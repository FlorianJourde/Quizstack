{% extends 'layout.html.twig' %}

{% set title = 'Categories' %}

{% block body %}

    {{ include('partials/banner.html.twig') }}

    <div class="wrapper">
        <div class="page-header-container">
            <h1 class="big-title grow">Categories</h1>
            <div class="buttons-container">
                <a class="button button-action" href="{{ path('categories_edit') }}">
                    <span class="material-icons">edit</span>
                </a>
            </div>
        </div>
    </div>

    <div class="wrapper wrapper-large">
        <div class="overflow-auto">
            <table class="table glass">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Position</th>
                    <th>Status</th>
                    <th>Name</th>
                    <th>Color</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.position }}</td>
                        <td>
                        <span class="text-xs rounded-sm px-2 py-1 {{ category.status ? 'bg-green-secondary/50' : 'bg-red-secondary/50' }}">
                            {{ category.status ? 'online' : 'offline' }}
                        </span>
                        </td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.color }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No categories.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}