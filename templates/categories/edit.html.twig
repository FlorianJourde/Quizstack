{% extends 'base.html.twig' %}

{% block title %}Edit categories{% endblock %}


{% block body %}
    <div class="container mt-4">
        <h1>Categories Management</h1>

{#        {% for message in app.flashes('success') %}#}
{#            <div class="alert alert-success">#}
{#                {{ message }}#}
{#            </div>#}
{#        {% endfor %}#}

        {# Form to add a new category #}
        <div class="card mb-4">
            <div class="card-header">
                <h5>Add New Category</h5>
            </div>
            <div class="card-body">
                {{ form_start(addForm) }}
                <div class="row align-items-end">
                    <div class="col-md-8">
                        {{ form_label(addForm.name, 'Category Name') }}
                        {{ form_widget(addForm.name, {'attr': {'placeholder': 'Enter new category name'}}) }}
                    </div>
                    <div class="col-md-2">
                        <div class="form-check">
{#                            {{ form_widget(addForm.status) }}#}
{#                            <label class="form-check-label" for="{{ addForm.status.vars.id }}">Enabled</label>#}
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success w-100">Add</button>
                    </div>
                </div>
                {{ form_end(addForm) }}
            </div>
        </div>

        {# Form to edit all categories #}
        {{ form_start(editForm) }}
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Edit Categories</h5>
                {{ form_widget(editForm.save) }}
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th style="width: 60px;">ID</th>
                            <th style="width: 120px;">Status</th>
                            <th>Name</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for categoryField in editForm.categories %}
                            {% set category = categoryField.vars.data %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td class="text-center">
{#                                    <div class="form-check form-switch d-flex justify-content-center">#}
{#                                        {{ form_widget(categoryField.status) }}#}
{#                                    </div>#}
                                    {{ category.status ? 'online' : 'offline' }}
                                </td>
                                <td>{{ form_widget(categoryField.name) }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('category_toggle', {'id': category.id}) }}"
                                           class="btn btn-sm btn-outline-{{ category.status ? 'warning' : 'success' }}">
                                            {{ category.status ? 'Disable' : 'Enable' }}
                                        </a>
                                        <form method="post" action="{{ path('category_delete', {'id': category.id}) }}"
                                              onsubmit="return confirm('Are you sure you want to delete this category?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center">No categories found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{ form_end(editForm) }}
    </div>
{% endblock %}

