{% extends 'layout.html.twig' %}

{% set title = 'Activity' %}

{% block body %}

    {{ include('partials/banner.html.twig', {'color': 'purple'}) }}

    <div class="wrapper">
        <div class="page-header-container">
            <h1 class="big-title grow">Activity</h1>
        </div>
    </div>

    <div class="wrapper wrapper-large">
        <div class="overflow-auto">
            <table class="table glass">
                <thead>
                <tr>
                    <th>Content</th>
                    <th>Date</th>
                    <th>Question</th>
                </tr>
                </thead>
                <tbody class="text-center">

                {% for comment in comments %}
                    <tr>
                        <td class="text-left min-w-[300px]">{{ comment.content|slice(0, 120) ~ (comment.content|length > 120 ? '...' : '') }}</td>
                        <td>{{ comment.creationDate|date('d/m/y') }}</td>
                        <td>
                            <div class="buttons-container">
                                <a href="{{ path('question', {'id': comment.question.id}) }}"
                                   class="button button-action">
                                    <span class="material-icons">visibility</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>

        {{ include('partials/pagination.html.twig', {'page': 'activity', 'pagination': comments}) }}

    </div>

{% endblock %}

